import csv
import time
import requests
from datetime import datetime

CSV_FILE = "scheduled_posts.csv"

def post_caption_to_facebook(page_id, access_token, caption):
    url = f"https://graph.facebook.com/v19.0/{page_id}/feed"
    data = {
        "message": caption,
        "access_token": access_token
    }
    response = requests.post(url, data=data)
    return response.json()

print("🟢 Scheduler đang chạy... Kiểm tra bài viết mỗi 60 giây.")

while True:
    now = datetime.now()
    updated_rows = []

    try:
        with open(CSV_FILE, "r", encoding="utf-8") as f:
            reader = csv.reader(f)
            rows = list(reader)
    except Exception as e:
        print("❌ Không thể đọc file CSV:", e)
        time.sleep(60)
        continue

    for row in rows:
        try:
            if len(row) < 10:
                print("⚠️ Bỏ qua dòng không đủ cột:", row)
                updated_rows.append(row)
                continue

            # Lấy đúng 10 cột
            product, keywords, platform, time_str, token, page_id, mode, date_str, caption, image_path = row[:10]

            scheduled_time = datetime.strptime(f"{date_str} {time_str}", "%Y-%m-%d %H:%M")

            print(f"\n📄 Đang xét bài: {product} ({platform}) - {scheduled_time}")
            print(f"🕒 Hiện tại: {now.strftime('%Y-%m-%d %H:%M')}")

            if platform.strip().lower() == "facebook" and now >= scheduled_time:
                print("🚀 Đang đăng bài lên Facebook...")
                result = post_caption_to_facebook(page_id.strip(), token.strip(), caption.strip())
                print("✅ Đã đăng:", result)
            else:
                updated_rows.append(row)

        except Exception as e:
            print("❌ Lỗi khi xử lý dòng:", row)
            print(e)
            updated_rows.append(row)

    # Ghi lại những bài chưa đến giờ
    try:
        with open(CSV_FILE, "w", encoding="utf-8", newline="") as f:
            writer = csv.writer(f)
            writer.writerows(updated_rows)
    except Exception as e:
        print("❌ Không thể ghi lại file CSV:", e)

    time.sleep(60)
